<form action="/newtab" method="POST" class="side-text">

        <div class="form-div">
            <label for="category" class="form-lbl"> Select a category: </label>
            <input list="category" name="category"/>
            <datalist id="category">
                <option value="Article">
                <option value="Video">
                <option value="Podcast">
            </datalist>
        </div>
        <div class="form-div">
            <label for="title" class="form-lbl"> Title </label>
            <input type="text" name="title" placeholder="Your short title" class="form-input" />
        </div>
         <div class="form-div">
            <label for="title" class="form-lbl"> Link </label>
            <input type="url" name="description" placeholder="Add link" class="form-input" />
        </div>
        <div class="form-div">
            <label for="keywords" class="form-lbl"> Keywords </label>
            <input type="text" name="keywords" placeholder="Add keywords" class="form-input" />
        </div>

        <button type="submit" class="form-btn">Save</button>
        <button type="submit" class="form-btn">Delete</button>
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>