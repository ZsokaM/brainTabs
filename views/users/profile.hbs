
<h1 class="main-header">My dashboard</h1>
<section class="container">
  
  <section class="side side-left">
    <a href="/newfolder"><img src="Images/add.png" width="50px" /></a>

    <section class="card-layout">
      {{#each user.folders}}
        <div class="flip-card">
          <div class="flip-card-inner">
            <div class="flip-card-front">
              <h2>{{this.title}}</h2>
            </div>
            <div class="flip-card-back">
              <a href="/profile/{{this._id}}"><img src="Images/book.png" width="50px"></a>
              <form action="/profile/{{this._id}}/delete" method="POST">
                  <button type="submit" style="border: 0; widht: 30px;background: transparent"><img src="Images/delete.png" width="50px"></button>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </section> 
  </section>

  <section class="side side-right">
    <form action="/newtab" method="POST"class="side-text">
    <div class="form-div"   >
      <select name="category" class="form-input" height="10">
        <option value=" ">Pick a category</option>
        <option name="video" value="video">Video</option>
        <option name="article" value="article">Article</option>
        <option name="podcast" value="podcast">Podcast or Audio</option>
      </select>
    </div>
    <div class="form-div">
      <input type="text" name="description" class="form-input" placeholder="Add the link"></input>
    </div>
    <button type="submit" class="btn">Save</button>

    <section class="tabs">
      {{#if user.tabs}}
        {{#each user.tabs}}
          <h3>{{this.category}}</h3>
          <a href="{{this.description}}">{{this.description}}</a>
          <form action="/newtab/{{this._id}}/delete" method="POST">
             <button type="submit" class="btn" style="font-size: smaller;">Delete</button>
          </form>
        {{/each}}
      {{else}}
        <h3 class="text-center" style="color:white">Save nice videos, articles and podcasts for later</h3>
      {{/if}}
    </section> 

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
  </section>
</section>