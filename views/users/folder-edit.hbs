<h1 class="text-center">Edit folder page</h1>

<div class="folder-sep text-center">
  <form action="/{{folder._id}}/edit" method="POST">
    <div class="form-div">
      <label> Folder name 
      <input type="text" name="title" class="form-input" value="{{folder.title}}"/>
    </label>
    </div>
    <div class="form-div">
      <label> Keywords 
      <input type="text" name="keywords" class="form-input" value="{{folder.keywords}}" />
    </label>
    </div>
    <div class="form-div">
      <textarea name="description" class="editor" >
        {{folder.description}}
      </textarea>
    </div>
    <button type="submit" class="btn">Save</button>
    <a href="/profile" class="btn">Back</a>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form> 

</div>
