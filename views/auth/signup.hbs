<div class="signup">
  <h2>Signup</h2>
  <form action="/signup" method="POST">
    <div class="form-div">
      <label for="input-username" class="form-lbl"> Username </label>
      <input type="text" name="username" placeholder="Your username"class="form-input"/>
    </div>

    <div class="form-div">
      <label for="input-email" class="form-lbl"> Email </label>
      <input type="email"id="input-email" name="email" placeholder="Your email" class="form-input" required/>
    </div>

    <div class="form-div">
      <label for="input-password" class="form-lbl"> Password </label>
      <input type="password" name="password" id="input-password" placeholder="********" class="form-input" required/>
    </div>
    <div class="form-div">
      <button type="submit" class="btn">Sign up</button>
    </div>
    <div class='text-center'>
      <p>Do you already have an account? <a href="/login">Login</a></p>
    </div>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>