<div class="signup">
  <h2>Login</h2>
  <form action="/login" method="POST">

    <div class="form-div">
      <label for="input-email" class="form-lbl"> Email </label>
      <input type="email" id="input-email" name="email" placeholder="Your email" class="form-input" required/>
    </div>

    <div class="form-div">
      <label for="input-password" class="form-lbl"> Password </label>
      <input type="password" name="password" id="input-password" placeholder="********" class="form-input" required/>
    </div>

    <div class="form-div">
      <button type="submit" class="btn">Login</button>
    </div>
    <div class="text-center">
      <p>You don't have an account yet? <a href="/signup">Signup</a></p>
    </div>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>